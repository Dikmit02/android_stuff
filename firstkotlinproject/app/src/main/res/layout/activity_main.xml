<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etvar2"
            app:layout_constraintStart_toStartOf="@+id/etvar1" app:layout_constraintTop_toBottomOf="@+id/etvar1"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toTopOf="@+id/btnAdd"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/etvar1"
            android:layout_marginTop="172dp"
            android:layout_marginBottom="24dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/etvar2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnAdd"
            app:layout_constraintTop_toBottomOf="@+id/etvar2" android:layout_marginBottom="34dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/tvresult"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="0"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:id="@+id/tvresult"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnAdd" android:layout_marginBottom="80dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp" android:textSize="20sp"/>
</android.support.constraint.ConstraintLayout>